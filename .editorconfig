# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,vue}]
indent_style = space
indent_size = 2

[*.{md,jade,pug}]
indent_size = 4
trim_trailing_whitespace = false
